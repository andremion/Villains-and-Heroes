<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="section"
            type="com.andremion.heroes.ui.binding.SectionWrapper"/>

        <variable
            name="imageTransition"
            type="java.lang.String"/>

    </data>

    <FrameLayout
        android:layout_width="@dimen/item_list_section_width"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/item_list_section_padding">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:transitionName="@{imageTransition}"
                app:imageUrl="@{section.thumbnail}"
                tools:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="2"
                android:text="@{section.name ?? section.title}"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="@string/app_name"/>

        </LinearLayout>

    </FrameLayout>

</layout>